- @posts.each do |post|

  %h2= link_to post.title, "/posts/#{post.id}/#{post.permalink}", :class => "override"

  %p
    %h6
      Posted on #{time_tag(post.created_at, :format => '%B %d, %Y')}

  - if post.image.present?
    %p= image_tag post.image.url(:medium)

  .post_body
    = markdown(post.body)

= paginate @posts
