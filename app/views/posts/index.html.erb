<% @posts.each do |post| %>
  <div class='posts-container'>
    <h1 class='header post-title'><%= link_to post.title, permalink_path(permalink: post.permalink) %></h1>
    <h5 class='header post-date'><%= "Written on #{post.created_at.strftime('%B %e, %Y')}" %></h5>
    <%= markdown.render(post.content).html_safe %>
    <% if logged_in? %>
        <%= link_to 'Edit post', edit_post_path(post) %>
    <% end %>
  </div>
<% end %>
