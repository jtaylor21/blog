<!DOCTYPE html>
<html>

<head>
  <title><%= pagetitle %></title>
  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Vollkorn:400italic,700italic,400,700|Open+Sans:400,700,600|family=Average' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= auto_discovery_link_tag(:rss, "http://www.vincentcabansag.com/posts.rss") %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-26209694-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>

<body>
  <div class='container'>

    <% flash.each do |key, value| %>
      <div id="flash" "<%= key %>"><%= value %></div>
    <% end %>

    <div class="content">
      <%= yield %>
    </div>

  </div>

  <div id="footer">
  </div>
</body>

</html>
